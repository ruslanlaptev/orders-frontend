@import '../../../../../common.styl'

.row
  min-height 64px
  display grid
  grid-template-columns repeat(5, 1fr)
  grid-column-gap 0.5rem
  border-bottom 1px solid $background

  div
    display flex
    align-items center
    justify-content center
    word-break break-all

    div
      width 80%

    &:last-child div
      width 100%

.orderNumber
  font-weight 500
  color $primary-dark


@media only screen and (max-width: 860px) 
  
  .row
    grid-column-gap 0.1rem
    
    div
      font-size 0.75rem